<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navbar_rowitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rowItemImage_recyclerView"
        android:contentDescription="navBarImage"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:padding="6dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/faq_icon" />


    <TextView
        android:id="@+id/rowItemText_recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:textStyle="bold"
        android:textColor="#ffff1700"
        android:layout_gravity="center_vertical"
        android:text="SignIn/SignUp user" />

</LinearLayout>